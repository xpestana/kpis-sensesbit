# Plantilla. Copiar a .env y rellenar con valores reales. .env no se sube a Git.

# Base de datos
# Local: POSTGRES_URL con localhost. Docker: compose usa POSTGRES_USER/PASSWORD/DB (host=postgres).
POSTGRES_URL=postgresql://user:password@localhost:5432/kpis
POSTGRES_USER=kpis
POSTGRES_PASSWORD=REEMPLAZAR_password_seguro
POSTGRES_DB=kpis

# HubSpot (Private App - Access Token)
HUBSPOT_API_KEY=REEMPLAZAR_token_hubspot

# CORS (or√≠genes permitidos, separados por coma)
ORIGIN_HOSTS=http://localhost:9000,http://localhost:3000,http://localhost:5050

# pgAdmin (solo con Docker)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=REEMPLAZAR_password_pgadmin

# Opcional
GLOBAL_SCHEMA=shared
PROD=false
